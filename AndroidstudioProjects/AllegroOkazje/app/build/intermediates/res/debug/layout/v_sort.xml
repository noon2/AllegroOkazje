    </RadioGroup>

    <Button
        android:id="@+id/v_sort_anuluj"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="@string/anuluj" />

</LinearLayout>
