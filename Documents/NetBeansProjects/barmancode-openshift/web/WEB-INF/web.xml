    <servlet>
        <servlet-name>PanierServlet</servlet-name>
        <servlet-class>Controller.PanierServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>PanierServlet</servlet-name>
        <url-pattern>/Panier</url-pattern>
