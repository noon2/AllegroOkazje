    <context-param>
        <param-name>
            driver
        </param-name>
        <param-value>
            com.mysql.jdbc.Driver
        </param-value>
    </context-param>
    <context-param>
        <param-name>
            url
        </param-name>
        <param-value>
            jdbc:mysql://127.0.0.1:3306/barmancode?characterEncoding=UTF-8
        </param-value>
    </context-param>
    <context-param>
        <param-name>             dbUser         </param-name>
        <param-value>barmancode</param-value>
    </context-param>
    <context-param>
        <param-name>             dbPassword         </param-name>
        <param-value>czekolada!@#</param-value>
    </context-param>
    <jsp-config>
        <jsp-property-group>
            <description>header and footer settings</description>
            <url-pattern>/registerUser.jsp</url-pattern>
            <url-pattern>/basket.jsp</url-pattern>
            <url-pattern>/login.jsp</url-pattern>
            <url-pattern>/ShowProduct.jsp</url-pattern>
            <url-pattern>/index.jsp</url-pattern>
            <include-prelude>/WEB-INF/jspf/header.jspf</include-prelude>
            <include-coda>/WEB-INF/jspf/footer.jspf</include-coda>
        </jsp-property-group>
    </jsp-config>
</web-app>
